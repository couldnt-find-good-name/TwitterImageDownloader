{
  "description": "Help you to download images from twitter timeline",
  "manifest_version": 2,
  "name": "TwitterImageDownloader",
  "version": "2.1.0",
  "homepage_url": "https://github.com/Eivy/TwitterImageDownloader",
  "background": {
    "scripts": ["src/jszip.min.js", "src/background.js"]
  },
  "browser_action": {
    "default_title": "TwitterImageDownloader",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "webRequest",
    "*://*.x.com/*"
  ],
  "icons": {
    "48": "assets/icon48.png",
    "96": "assets/icon96.png"
  }
}
